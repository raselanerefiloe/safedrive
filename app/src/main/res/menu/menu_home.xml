<menu xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Notification action item with a badge for count -->
    <item
        android:id="@+id/action_notifications"
        android:icon="@drawable/ic_notification"
        android:title="Notifications"
        android:actionLayout="@layout/notification_badge"
        app:showAsAction="always"
        tools:ignore="HardcodedText" />

    <!-- Alert button to send notification about road condition -->
    <item
        android:id="@+id/action_alert"
        android:icon="@drawable/ic_alert"
        android:title="Send Alert"
        app:showAsAction="ifRoom"
        tools:ignore="HardcodedText" />
</menu>
